{
    "env": {
        "browser": true,
        "es2017": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": 1,
        "no-extra-parens": 2,
        "arrow-parens": 2,
        "require-atomic-updates": 2,
        "eqeqeq": [
            "error",
            "smart"
        ],
        "prefer-template": 2,
        "sort-imports": 1
    }
}
